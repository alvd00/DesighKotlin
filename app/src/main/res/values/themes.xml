<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DesighKotlin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor"
            tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomOutlinedBox" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">5</item>
        <item name="boxStrokeErrorColor">@color/black</item>
        <item name="counterOverflowTextColor">@color/black</item>
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_wikipedia</item>
        <item name="textInputStyle">@style/CustomOutlinedBox.</item>
    </style>

    <style name="Theme.DesighKotlin.myTheme.Splash">
        <item name="android:windowBackground">@drawable/splash_background_drawable</item>
    </style>
    
    <style name="CustomOutlinedBox." parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">5</item>
        <item name="boxStrokeErrorColor">@color/colorAccent</item>
        <item name="boxStrokeColor">@color/light_blue</item>
        <item name="cornerRadius">20dp</item>
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_wikipedia</item>
        <item name="myOutlineColor">@color/MyColorOne</item>
    </style>

    <style name="Theme.DesighKotlin.myTheme" parent="Theme.DesighKotlin">
        <item name="cornerRadius">30dp</item>
        <item name="background">@drawable/universe</item>
        <item name="boxStrokeColor">@color/light_blue</item>
        <item name="fontFamily">@font/italic_variable_font_wght</item>
    </style>
</resources>